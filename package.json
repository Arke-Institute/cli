{
  "name": "@arke/upload-cli",
  "version": "0.1.0",
  "description": "CLI tool for uploading files to Arke Institute's ingest service",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "arke-upload": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
