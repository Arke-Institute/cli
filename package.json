    "axios": "^1.6.0",
    "cli-progress": "^3.12.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/mime-types": "^2.1.4",
    "@types/cli-progress": "^3.11.5",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
